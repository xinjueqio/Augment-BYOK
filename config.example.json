{
  "version": 1,
  "official": {
    "completionUrl": "https://your-tenant.augmentcode.com/",
    "apiToken": "ace_your_official_token"
  },
  "providers": [
    {
      "id": "openai",
      "type": "openai_compatible",
      "baseUrl": "https://api.openai.com/v1",
      "apiKey": "sk-your-openai-api-key",
      "models": ["gpt-4o-mini", "gpt-4o"],
      "defaultModel": "gpt-4o-mini",
      "headers": {},
      "requestDefaults": { "temperature": 0.2 }
    },
    {
      "id": "codex",
      "type": "openai_responses",
      "baseUrl": "https://api.openai.com/v1",
      "apiKey": "sk-your-openai-api-key",
      "models": ["gpt-4o-mini"],
      "defaultModel": "gpt-4o-mini",
      "headers": {},
      "requestDefaults": { "reasoning": { "effort": "medium" } }
    },
    {
      "id": "anthropic",
      "type": "anthropic",
      "baseUrl": "https://api.anthropic.com/v1",
      "apiKey": "sk-ant-your-anthropic-api-key",
      "models": ["claude-3-5-sonnet-20241022", "claude-3-5-haiku-20241022"],
      "defaultModel": "claude-3-5-sonnet-20241022",
      "headers": {},
      "requestDefaults": { "max_tokens": 8192 }
    },
    {
      "id": "gemini",
      "type": "gemini_ai_studio",
      "baseUrl": "https://generativelanguage.googleapis.com/v1beta",
      "apiKey": "AIza-your-gemini-api-key",
      "models": ["models/gemini-1.5-flash", "models/gemini-1.5-pro"],
      "defaultModel": "models/gemini-1.5-flash",
      "headers": {},
      "requestDefaults": { "generationConfig": { "temperature": 0.2 } }
    }
  ],
  "routing": {
    "rules": {
      "/get-models": { "mode": "byok" },
      "/chat": { "mode": "byok" },
      "/chat-stream": { "mode": "byok" },
      "/prompt-enhancer": { "mode": "byok" },
      "/completion": { "mode": "byok" },
      "/chat-input-completion": { "mode": "byok" },
      "/edit": { "mode": "byok" },
      "/instruction-stream": { "mode": "byok" },
      "/smart-paste-stream": { "mode": "byok" },
      "/next-edit-stream": { "mode": "byok" },
      "/generate-commit-message-stream": { "mode": "byok" },
      "/generate-conversation-title": { "mode": "byok" },
      "/next_edit_loc": { "mode": "byok" },

      "/client-metrics": { "mode": "disabled" },
      "/client-completion-timelines": { "mode": "disabled" },
      "/record-preference-sample": { "mode": "disabled" },
      "/record-request-events": { "mode": "official" },
      "/record-session-events": { "mode": "disabled" },
      "/record-user-events": { "mode": "disabled" },
      "/report-error": { "mode": "official" },
      "/resolve-completions": { "mode": "disabled" },
      "/resolve-edit": { "mode": "disabled" },
      "/resolve-instruction": { "mode": "disabled" }
    }
  },
  "historySummary": {
    "enabled": false,
    "providerId": "",
    "model": ""
  },
  "prompts": {
    "endpointSystem": {
      "/chat": "默认使用简体中文回答（除非用户明确要求英文）。\\n优先级：正确性 > 最小改动 > 一致性。",
      "/edit": "如果输出是代码：只输出替换后的代码，不要解释。",
      "/generate-commit-message-stream": "Output one concise English commit subject line (no quotes, no trailing period).",
      "/next_edit_loc": "Return STRICT JSON only (no markdown, no comments, no trailing commas)."
    }
  }
}
